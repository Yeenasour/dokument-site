---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<h1>{title}</h1>
		<slot />
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Meroitic&family=Oxygen&display=swap');

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;

		--color-primary: #09cdda;
		--color-secondary: #9aeaf1;
		--color-secondary-hover: #77d6dd;
		--color-tertiary: #b4eaf0;
		--color-tertiary-hover: #aae7ec;
		--color-tertiary-focus: #a7e2e9;
		--color-background: #ccf2f3;
		--color-text: #010404;
	}

	body {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		font-family: sans-serif;
		background-color: var(--color-background);
	}

	h1 {
		font-family: 'Oxygen', sans-serif;
		margin: 2rem 0 0.8rem 0;
		font-size: 2.5rem;
		color: var(--color-primary);
	}

	/* Dark theme */
	@media (prefers-color-scheme: dark) {
		* {
			--color-primary: #09cdda;
			--color-secondary: #00474c;
			--color-secondary-hover: #015157;
			--color-tertiary: #032e33;
			--color-tertiary-hover: #08343a;
			--color-tertiary-focus: #0c4147;
			--color-background: #0d1617;
			--color-text: #d3f5f8;
		}
	}
</style>
